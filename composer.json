{
    "name": "fernandocalmet/culqi-checkout-php",
    "description": "Simple PHP website to use as a payment gateway with Culqi.",
    "type": "project",
    "authors": [
        {
            "name": "Fernando Calmet",
            "email": "fercalmet@gmail.com",
            "homepage": "https://github.com/fernandocalmet"
        }
    ],
    "require": {
        "culqi/culqi-php": "1.3.4"
    },
    "config": {
        "sort-packages": true,
        "process-timeout" : 0
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "scripts": {     
        "start": "php -S 127.0.0.1:8080 -t src src/index.php"
    }
}
